extends splash

block header
	link(rel='stylesheet', href='/css/splash.css')
	link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lobster+Two:400italic|Open+Sans:300', type='text/css')

block content
	.container.valign.center-align
		.row
			.col.s12
				h1.logo= title
				h2 Find Your Adventure
				#btnWrapper.center-align
					#login
						a.btn.btn-primary(href="/login/login") Login with Spotify
					#loggedin
						#user-profile
						#oauth
						button.btn.btn-default#obtain-new-token
					a.splashBtn.waves-effect.waves-teal.btn-large.btn-flat#createTrip(href='#') Create a Road Trip
					a.splashBtn.waves-effect.waves-teal.btn-large.btn-flat(href='/search') Find a Road Trip
		script#user-profile-template(type="text/x-handlebars-template")
			h1 Logged in as {{display_name}}
			.media
				.pull-left
					img.media-object(width="150" src="{{images.0.url}}")
				.media-body
					dl.dl-horizontal
						dt Display name
						dd.clearfix {{display_name}}
						dt Id
						dd {{id}}
						dt Email
						dd {{email}}
						dt Spotify URI
						dd
							a(href="{{external_urls.spotify}}") {{external_urls.spotify}}
						dt Link
						dd
							a(href="{{href}}") {{href}}
						dt Profile Image
						dd.clearfix
							a(href="{{images.0.url}}") {{images.0.url}}
						dt Country
						dd {{country}

script("text/javascript").
	(function() {
		/**
		 * Obtains parameters from the hash of the URL
		 * @return Object
		 */
		function getHashParams() {
			var hashParams = {};
			var e, r = /([^&;=]+)=?([^&;]*)/g,
			  q = window.location.hash.substring(1);
		  while ( e = r.exec(q)) {
			 hashParams[e[1]] = decodeURIComponent(e[2]);
		  }
		  return hashParams;
		}
		var userProfileSource = document.getElementById('user-profile-template').innerHTML,
			userProfileTemplate = Handlebars.compile(userProfileSource),
			userProfilePlaceholder = document.getElementById('user-profile');
		var oauthSource = document.getElementById('oauth-template').innerHTML,
			oauthTemplate = Handlebars.compile(oauthSource),
			oauthPlaceholder = document.getElementById('oauth');
		var params = getHashParams();
		var access_token = params.access_token,
			refresh_token = params.refresh_token,
			error = params.error;
		if (error) {
		  alert('There was an error during the authentication');
		} else {
		  if (access_token) {
			// render oauth info
			oauthPlaceholder.innerHTML = oauthTemplate({
			  access_token: access_token,
			  refresh_token: refresh_token
			});
			$.ajax({
				url: 'https://api.spotify.com/v1/me',
				headers: {
				  'Authorization': 'Bearer ' + access_token
				},
				success: function(response) {
				  userProfilePlaceholder.innerHTML = userProfileTemplate(response);
				  $('#login').hide();
				  $('#loggedin').show();
				}
			});
		  } else {
			  // render initial screen
			  $('#login').show();
			  $('#loggedin').hide();
		  }
		  document.getElementById('obtain-new-token').addEventListener('click', function() {
			$.ajax({
			  url: '/refresh_token',
			  data: {
				'refresh_token': refresh_token
			  }
			}).done(function(data) {
			  access_token = data.access_token;
			  oauthPlaceholder.innerHTML = oauthTemplate({
				access_token: access_token,
				refresh_token: refresh_token
			  });
			});
		  }, false);
		}
	  })();
